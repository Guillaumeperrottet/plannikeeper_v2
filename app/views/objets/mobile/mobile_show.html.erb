<div class="spacer"></div>
<div class="object-mobile-show">
  <h2>Tous mes articles</h2>

  <ul class="article-list">
    <% @objet.articles.each do |article| %>
      <li>
        <%= link_to article.title, [@objet, article.secteur, article], class: "article-link" %>
      </li>
    <% end %>
  </ul>

  <div class="add-article-container">
    <%= link_to "Ajouter un article", objet_path(@objet, add_article: true), class: "btn btn-primary btn-block-mobile-custom" %>
  </div>

  <%= link_to "Retour", objets_path, class: "btn btn-secondary" %>
</div>
