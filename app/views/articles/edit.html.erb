<div class="spacer"></div>
<%= form_with model: [@objet, @secteur, @article], local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Titre' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Description' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <%= form.submit 'Modifier', class: 'btn btn-primary' %>
<% end %>
<div class="actions delete-article">
  <%= form_with model: [@objet, @secteur, @article], url: objet_secteur_article_path(@objet, @secteur, @article), method: :delete, local: true, data: { controller: "delete-confirm", action: "submit->delete-confirm#confirm", "delete-confirm-message-value": "Êtes-vous sûr de vouloir supprimer cet article ?" } do |f| %>
    <%= f.submit "Supprimer l'article", class: "btn-simple btn-danger delete-article-btn" %>
  <% end %>
</div>
