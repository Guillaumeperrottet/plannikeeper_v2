<h2>Se connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if resource.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(resource.errors.count, "erreur") %> empêchent la connexion :</h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Se connecter" %>
  </div>
<% end %>

<div>
  <%= link_to 'Se connecter avec Google', user_google_oauth2_omniauth_authorize_path, method: :get %>
</div>

<div>
  <%= link_to 'Créer un nouveau compte', new_user_registration_path %>
</div>

<div>
  <%= link_to "Mot de passe oublié ?", new_user_password_path %>
</div>
